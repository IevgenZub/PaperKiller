@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2 class="display-5">
        Enter image URL for text recognition
    </h2>
    <div asp-validation-summary="All"></div>
    <form method="POST">
        <div class="form-group">
            <input id="paperUrl" required class="form-control" asp-for="Paper.Url" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    <label style="color:red">@Model.Text.Error</label>
    @if (Model.Text.DynamicResponse != null)
    {
    <div class="row text-left">
        <div class="col">
            <h4>Result:</h4>
            <ul>
                @foreach (var line in Model.Text.DynamicResponse.regions[0].lines)
                {
                    <li>
                        @foreach (var word in line.words)
                        {
                            @word.text
                            <label>&nbsp;</label>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
    }
</div>
